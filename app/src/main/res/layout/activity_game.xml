<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Game">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:contentDescription="app_name_spin"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="@string/SpinThis"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tokens"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="tok"
                android:fontFamily="@font/comfortaa"
                android:gravity="center_vertical|end"
                android:paddingRight="5dp"
                android:text="Tokens: 1000"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/ramka">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="6dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/point1"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/citrus" />

                    <ImageView
                        android:id="@+id/point4"
                        android:layout_width="78dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/greap" />

                    <ImageView
                        android:id="@+id/point7"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/citrus" />

                    <ImageView
                        android:id="@+id/point10"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/mellow" />

                    <ImageView
                        android:id="@+id/point13"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sliva" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/point2"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/greap" />

                    <ImageView
                        android:id="@+id/point5"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/citrus" />

                    <ImageView
                        android:id="@+id/point8"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sliva" />

                    <ImageView
                        android:id="@+id/point11"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sliva" />

                    <ImageView
                        android:id="@+id/point14"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/citrus" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="78dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/point3"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/sliva" />

                    <ImageView
                        android:id="@+id/point6"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/mellow" />

                    <ImageView
                        android:id="@+id/point9"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/mellow" />

                    <ImageView
                        android:id="@+id/point12"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/greap" />

                    <ImageView
                        android:id="@+id/point15"
                        android:layout_width="78dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        app:srcCompat="@drawable/citrus" />
                </LinearLayout>
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/spin"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/cardview_shadow_end_color"
                android:contentDescription="btn_spin"
                android:translationY="20dp"
                app:srcCompat="@drawable/but" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="@string/btn1"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:translationY="20dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <ImageButton
                android:id="@+id/spin5"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/cardview_shadow_end_color"
                android:contentDescription="btn_spin_5"
                android:translationY="20dp"
                app:srcCompat="@drawable/but" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="@string/btn5"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:translationY="20dp" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="50dp">

            <ImageButton
                android:id="@+id/buttonBack"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/cardview_shadow_end_color"
                android:contentDescription="back"
                android:translationY="20dp"
                app:srcCompat="@drawable/but" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="85dp"
                android:fontFamily="@font/comfortaa"
                android:gravity="center"
                android:text="@string/btnBack"
                android:textColor="@color/white"
                android:textSize="34sp"
                android:translationY="20dp" />

        </FrameLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>